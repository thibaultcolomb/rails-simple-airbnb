
<div class="row justify-content-center">
<h2 class="ms-5 mt-3">All our flats (<%= @flats.all.count %>)</h2>

<div class="container col-10">
  <div class="cards">
  <% @flats.each do |flat| %>
    <div class="border m-3 px-0 shadow  bg-secondary bg-opacity-10">
      <div class="d-flex flex-column">
        <div class="">
          <h5 class="px-3 pt-2 text-bold"><%= flat.name%></h5>
          <p class="px-3 fs-6"><%= flat.address%></p>
        </div>

        <div class="d-flex ">
          <div class="d-flex align-items-center ps-3">
            <i class="fa-solid fa-people-group "></i>
            <p class="px-2 mb-0"><%= flat.number_of_guests%></p>
          </div>
          <div class="d-flex align-items-center px-1">
            <i class="fa-solid fa-euro-sign"></i>
            <p class="px-2 mb-0"><%= flat.price_per_night%></p>
          </div>
        </div>

      </div>

      <div class="mt-2 py-2 bg-white">
        <%=link_to "More info", flat_path(flat), class: "ps-2"  %>
        <%=link_to "Update", edit_flat_path(flat), class: " text-warning ps-2" %>
        <%=link_to "Remove", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: " text-danger ps-2" %>
      </div>
    </div>
  <% end %>
  </div>
</div>

</div>
